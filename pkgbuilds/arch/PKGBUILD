# Maintainer: Dsyboot <dsyboot@gmail.com>
pkgname=Dsy-tools
pkgver=1.2.1
pkgrel=1
pkgdesc="Dsy-tools es un programa con algunos scripts"
arch=(x86_64)
url="https://github.com/Dsyboot-Dsystem/dsy-tools.git"
license=('MIT')
depends=(figlet)
makedepends=(git make shc)
optdepends=()
provides=(dsy)
conflicts=()
changelog=
source=("git clone $url")
noextract=()
md5sums=('SKIP')

prepare() {
	cd "dsy-tools/pkgbuilds/arch/source"
	patch -p1 -i "$source/$pkgname-$pkgver.patch"
}

build() {
	cd "$pkgname"
	make
}

package() {
    exit 0
}
