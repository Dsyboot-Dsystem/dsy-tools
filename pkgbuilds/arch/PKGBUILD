# Maintainer: Your Name <youremail@domain.com>
pkgname=Dsy-tools
pkgver=1.2.1
pkgrel=1
pkgdesc="Dsy-tools es un programa con algunos scripts"
arch=(x86_64)
url="https://github.com/Dsyboot-Dsystem/dsy-tools/"
license=('MIT')
depends=(figlet)
makedepends=(git make shc)
optdepends=()
provides=(dsy)
conflicts=()
changelog=
source=("git+$url")
noextract=()
md5sums=('SKIP')

prepare() {
	cd "$pkgname-$pkgver"
	patch -p1 -i "$srcdir/$pkgname-$pkgver.patch"
}

build() {
	cd "$pkgname"
	make
}

package() {
        cd dsy-tools
	make DESTDIR="$pkgdir/" install
}
